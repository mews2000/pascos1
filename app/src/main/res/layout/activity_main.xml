<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ProgressBar
        android:id="@+id/envi"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="354dp"
        android:layout_height="324dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="29dp"
        android:indeterminate="false"
        android:progress="70"
        android:progressDrawable="@drawable/circle"
        android:progressTint="#D5D5D5"
        android:rotation="144"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/amount"
        android:layout_width="94dp"
        android:layout_height="51dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#9E9E9E"
        android:text="마신 양"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/temper"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/personal"
        android:layout_width="94dp"
        android:layout_height="51dp"
        android:layout_marginStart="105dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#9F9F9F"
        android:text="키 &amp; 체중"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/kill"
        android:layout_width="94dp"
        android:layout_height="51dp"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#E9C694"
        android:text="살균"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/personal"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/temper"
        android:layout_width="94dp"
        android:layout_height="51dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#E9C695"
        android:text="수온"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="212dp" />

    <ProgressBar
        android:id="@+id/gage"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="354dp"
        android:layout_height="324dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="29dp"
        android:indeterminate="false"
        android:progress="20"
        android:progressDrawable="@drawable/circle"
        android:progressTint="#75E2BF"
        android:rotation="144"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/timer"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="354dp"
        android:layout_height="324dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="29dp"
        android:indeterminate="false"
        android:max="10000"
        android:progress="0"
        android:progressDrawable="@drawable/circle"
        android:progressTint="#EBA7D8"
        android:rotation="144"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_txt"
        android:layout_width="106dp"
        android:layout_height="49dp"
        android:layout_marginRight="152dp"
        android:layout_marginBottom="248dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#EEACD1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="340dp"
        android:layout_height="159dp"
        android:layout_marginRight="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/thermo" />

    <ImageButton
        android:id="@+id/btnConnect"
        android:layout_width="62dp"
        android:layout_height="71dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="55dp"
        android:indeterminate="false"


        android:max="100"
        android:progress="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/amm"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="388dp"
        android:text=""
        android:textColor="#76E2BF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>


</android.support.constraint.ConstraintLayout>