<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330sp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="start"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:text="키와 체중을 입력해주십시오."
        android:textColor="#000"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/kii"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="0dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/findPwDialogNameEt"
                android:layout_width="236dp"
                android:layout_height="42dp"
                android:hint="키"
                android:text=""
                android:inputType="numberDecimal"
                android:textColorHint="#42000000"
                android:textSize="15sp"
                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="cm"
            android:textSize="20dp"
            android:gravity="fill"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/findPwDialogEmailTi"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="0dp"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/findPwDialogEmailEt"
                android:layout_width="236dp"
                android:layout_height="42dp"
                android:hint="체중"
                android:text=""
                android:inputType="numberDecimal"
                android:textColorHint="#42000000"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="kg"
            android:gravity="fill"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <TextView
        android:text="하루 마실 물의 권장량을 계산합니다."
        android:textSize="16sp"
        android:textColor="#000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/findPwDialogCancelTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/findPwDialogFindTv"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="입력"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_marginRight="1sp"
            />
    </LinearLayout>
</LinearLayout>